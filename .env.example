# Oracle Cloud Confidential VM Configuration
# Copy this file to .env and fill in your values

# ==========================================
# PAYPAL CONFIGURATION
# ==========================================
# Get these from https://developer.paypal.com/
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here

# ==========================================
# DOMAIN CONFIGURATION
# ==========================================
# Your domain name (must point to your reserved IP)
DOMAIN=your-domain.com

# ==========================================
# SECURITY CONFIGURATION
# ==========================================
# Private key for signing responses (generate with: openssl genrsa 2048)
PRIVATE_KEY=-----BEGIN PRIVATE KEY-----
MIIEvQIBADANBgkqhkiG9w0BAQEFAASCBKcwggSjAgEAAoIBAQC...
-----END PRIVATE KEY-----

# ==========================================
# ORACLE CLOUD CONFIGURATION
# ==========================================
# OCI region (e.g., us-ashburn-1, us-phoenix-1)
OCI_REGION=us-ashburn-1

# Your compartment OCID
OCI_COMPARTMENT_ID=ocid1.compartment.oc1..exampleuniqueID

# ==========================================
# SERVICE CONFIGURATION
# ==========================================
# Service bind address (internal port, behind load balancer)
BIND_ADDRESS=0.0.0.0:8080

# ==========================================
# CERTIFICATE CONFIGURATION
# ==========================================
# Let's Encrypt contact email
LETSENCRYPT_EMAIL=admin@your-domain.com

# Certificate renewal (days before expiration)
CERT_RENEWAL_DAYS=30

# ==========================================
# LOGGING CONFIGURATION
# ==========================================
# Log level (error, warn, info, debug, trace)
RUST_LOG=info

# Enable structured JSON logging
JSON_LOGS=false

# ==========================================
# PERFORMANCE CONFIGURATION
# ==========================================
# Worker threads (0 = number of CPU cores)
WORKER_THREADS=0

# Max connections per worker
MAX_CONNECTIONS=1000

# Keep-alive timeout (seconds)
KEEP_ALIVE_TIMEOUT=5

# ==========================================
# SECURITY SETTINGS
# ==========================================
# Rate limiting (requests per minute)
RATE_LIMIT_RPM=100

# Enable CORS
ENABLE_CORS=true

# CORS allowed origins (comma-separated)
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com

# ==========================================
# MONITORING CONFIGURATION
# ==========================================
# Health check endpoint
HEALTH_CHECK_ENABLED=true

# Metrics endpoint
METRICS_ENABLED=false

# ==========================================
# OPTIONAL: DATABASE CONFIGURATION
# ==========================================
# For persistent user tracking (instead of memory-only)
# DATABASE_URL=sqlite:/home/opc/confidential-paypal-service/users.db
# ENABLE_PERSISTENT_STORAGE=false